{
    "name": "scriptedeuch",
    "module": "src/index.ts",
    "type": "module",
    "devDependencies": {
        "@types/bun": "latest",
        "typedoc": "^0.28.15",
        "typedoc-plugin-markdown": "^4.9.0"
    },
    "peerDependencies": {
        "typescript": "^5.9.3"
